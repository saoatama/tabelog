<p id="notice"><%= notice %></p>
<%= render 'admin/shared/link' %>
<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Rating</th>
      <th>Budget</th>
      <th>Address</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.title %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.budget_id %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.menu %></td>
        <td><%= link_to 'Show', [:admin, restaurant] %></td>
        <td><%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', [:admin, restaurant], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_admin_restaurant_path %>
