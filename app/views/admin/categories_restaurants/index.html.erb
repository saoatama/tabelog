<h1>Categories Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Category_id</th>
      <th>Restaurant_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories_restaurants.each do |categories_restaurant| %>
      <tr
        <td><%= categories_restaurant.category_id %></td>
        <td><%= categories_restaurant.restaurant_id %></td>
        <td><%= link_to 'Show', [:admin, categories_restaurant] %></td>
        <td><%= link_to 'Edit', edit_admin_categories_restaurant_path(categories_restaurant) %></td>
        <td><%= link_to 'Destroy', [:admin, categories_restaurant], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

